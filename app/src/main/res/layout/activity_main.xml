<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trendy.mina.com.trendy.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sources_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="@dimen/progressbar_dimen"
        android:layout_height="@dimen/progressbar_dimen"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/empty_sources_list"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/source_tv_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="NO SOURCES AVIALABLE"
        android:contentDescription="NO SOURCES AVIALABLE"
        android:visibility="gone" />
</FrameLayout>
